<project name="sql">
    <macrodef name="sqlplus">
      <attribute name="infile"/>
      <attribute name="outfile"/>
      <attribute name="pass"/>
      <attribute name="user"/>
      <attribute name="sqlplus.dir" />
      <sequential>
          <echo message="Running @{infile}  See @{outfile}"/>        
          <exec 
            dir="@{sqlplus.dir}" 
            executable="sqlplus" 
            output="@{outfile}"
            inputstring="exit">
             <arg line="'@{user}/@{pass}@(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(Host=${Server})(Port=${Port}))(CONNECT_DATA=(SID=${DBName})))' @ @{infile}"/>
          </exec>
      </sequential>
    </macrodef>
</project>
